def temp_converter(cel: float) -> float:
    """
    The function to convert temperatures in degrees Celsius to Fahrenheit.

    Args:
        cel (float): Temperature in Celsius degrees [째C] entered by the user.

    Returns:
        float: Temperature converted to Fahrenheit [째F].
    """
    return (cel * 9/5) + 32


while True:
    cel = float(input("Celcius temperature: "))
    fahr = temp_converter(cel)
    print(f"{cel} 째C = {fahr:.2f} 째F")
