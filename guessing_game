answer = 5
guess = int(input("Guess the number: "))

if guess == answer:
    print("You got it at first time!")
else:
    if guess < answer:
        print("You have to guess higher")
    else:
        print("You have to guess lower")
    guess = int(input())
    if guess != answer:
        print("Sorry, you did not guess")
    else:
        print("Well done, you guessed it!")
